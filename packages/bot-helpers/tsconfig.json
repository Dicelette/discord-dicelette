{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"composite": true
	},
	"exclude": ["./dist"],
	"include": ["src/**/*", "index.ts", "package.json"],
	"ts-node": {
		"esm": true,
		"require": ["tsconfig-paths/register"]
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
