{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"checkJs": false,
		"composite": true,
		"declaration": true,
		"declarationMap": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"inlineSourceMap": true,
		"lib": ["ESNext"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./dist/",
		"paths": {
			"@dicelette/*": ["packages/*/index.ts"],
			"client": ["packages/bot/src/client.ts"],
			"commands": ["packages/bot/src/commands/index.ts"],
			"database": ["packages/bot/src/database/index.ts"],
			"discord_ext": ["packages/bot/src/discord_ext.ts"],
			"event": ["packages/bot/src/events/index.ts"],
			"features": ["packages/bot/src/features/index.ts"],
			"locales": ["packages/bot/src/locales.ts"],
			"messages": ["packages/bot/src/messages/index.ts"],
			"utils": ["packages/bot/src/utils/index.ts"]
		},
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "./",
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "ESNext",
		"typeRoots": ["packages/@types", "node_modules/@types"]
	},
	"exclude": ["node_modules"],
	"include": ["packages/**/*.ts", "packages/**/*.d.ts", "package.json"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node",
		"require": ["tsconfig-paths/register"],
		"transpileOnly": true
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
